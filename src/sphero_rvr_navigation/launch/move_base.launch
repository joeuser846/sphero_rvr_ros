<launch>
  <!-- Arguments -->
  <arg name="model" default="rvr"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="/odom" />
  <arg name="local_planner" doc="Local planner can be either dwa, dwb, base, teb or pose"/>
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find sphero_rvr_navigation)/config/move_base_params.yaml" command="load" />
  <!-- global costmap params -->
    <rosparam file="$(find sphero_rvr_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find sphero_rvr_navigation)/config/costmap_global_params.yaml" command="load" />
  <!-- local costmap params -->
    <rosparam file="$(find sphero_rvr_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find sphero_rvr_navigation)/config/costmap_local_params.yaml" command="load" />
  <!-- remappings -->
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
